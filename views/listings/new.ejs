<% layout("layouts/boilerplate") %>

<style>
    .form-card {
        padding: 2.5rem;
        background-color: #ffffff;
        border-radius: 1rem;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        border: 1px solid #f0f0f0;
    }

    .form-card .form-title {
        font-weight: 700;
        margin-bottom: 2rem;
    }

    /* Style for floating labels */
    .form-floating > .form-control {
        border-radius: 0.75rem;
    }
    
    /* Make textarea resizable only vertically */
    .form-floating > textarea.form-control {
        resize: vertical;
        min-height: 120px;
    }

    .form-floating > .form-control:focus {
        border-color: #fe424d;
        box-shadow: 0 0 0 4px rgba(254, 66, 77, 0.15);
    }

    /* Custom styles for the file input */
    .form-file-wrapper {
        position: relative;
        overflow: hidden;
        border-radius: 0.75rem;
        border: 1px solid #ced4da;
        transition: all 0.3s ease;
        cursor: pointer;
    }
    .form-file-wrapper:hover {
        border-color: #fe424d;
        box-shadow: 0 0 0 4px rgba(254, 66, 77, 0.15);
    }
    .form-file-label {
        display: block;
        padding: 0.8rem 1rem;
        background-color: #f8f9fa;
        color: #6c757d;
    }
    .form-file-label i {
        margin-right: 0.5rem;
        color: #fe424d;
    }
    .form-file-input {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0; /* Hides the default input */
        cursor: pointer;
    }

    /* Custom branded button */
    .btn-brand {
        background-color: #fe424d;
        border-color: #fe424d;
        color: #fff;
        padding: 0.8rem;
        font-weight: 500;
        border-radius: 0.75rem;
        transition: all 0.3s ease;
    }
    .btn-brand:hover {
        background-color: #e03a45;
        border-color: #e03a45;
        color: #fff;
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(254, 66, 77, 0.3);
    }
</style>

<div class="row mt-5 mb-5">
    <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
        <div class="form-card">
            <h3 class="form-title text-center">Create a New Listing</h3>
            <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">

                <div class="form-floating mb-3">
                    <input id="title" name="listing[title]" placeholder="Enter title" type="text" class="form-control" required />
                    <label for="title">Title</label>
                </div>

                <div class="form-floating mb-3">
                    <textarea id="description" name="listing[description]" placeholder="Enter description" class="form-control" required></textarea>
                    <label for="description">Description</label>
                </div>

                <div class="mb-3">
                    <label class="form-label">Upload Listing Image</label>
                    <div class="form-file-wrapper">
                        <label for="image" class="form-file-label">
                            <i class="fa-solid fa-cloud-arrow-up"></i>
                            <span id="file-name-display">Choose a file...</span>
                        </label>
                        <input id="image" name="listing[image]" type="file" class="form-file-input" required/>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <input id="price" name="listing[price]" placeholder="Enter price" type="number" class="form-control" required />
                            <label for="price">Price (â‚¹)</label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <input id="country" name="listing[country]" placeholder="Enter country" type="text" class="form-control" required />
                            <label for="country">Country</label>
                        </div>
                    </div>
                </div>

                <div class="form-floating mb-4">
                    <input id="location" name="listing[location]" placeholder="Enter location" type="text" class="form-control" required />
                    <label for="location">Location</label>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-brand">Create Listing</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    const fileInput = document.getElementById('image');
    const fileNameDisplay = document.getElementById('file-name-display');

    fileInput.addEventListener('change', (event) => {
        const fileName = event.target.files[0]?.name;
        if (fileName) {
            fileNameDisplay.textContent = fileName;
        } else {
            fileNameDisplay.textContent = 'Choose a file...';
        }
    });
</script>